<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>Perfil de usuario</h1>
        <hr>
        <h2>Ordenes</h2>
            <div class="panel panel-default" ng-repeat="order in orders">
               <div class="panel-body">
                    <ul class="list-group">
                            <li class="list-group-item" ng-repeat="item in order.cart.productos">
                                <span class="badge">{{ this.price }}</span>
                                {{ item.nombre }} | {{ item.qty }} Unidades
                            </li>
                    </ul>
                </div>
                <div class="panel-footer">
                    <strong>Precio Total: ${{ order.cart.precioTotal }}</strong>
                </div>
            </div>
    </div>
</div>
<section id="form"><!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-4 col-sm-offset-1">
				<div class="login-form"><!--login form-->
					<h2>Iniciar sesión</h2>
					<form action="#">
						<input type="text" placeholder="Nombre" ng-model="user.name" />
						<input type="password" placeholder="Contraseña" ng-model="user.password" />
						<span>
							<input type="checkbox" class="checkbox"> 
							Mantener la sesion abierta
						</span>
						<button type="submit" class="btn btn-default" ng-click="login()"> Entrar </button>
					</form>
				</div><!--/login form-->
			</div>
			<div class="col-sm-1">
				<h2 class="or">OR</h2>
			</div>
			<div class="col-sm-4">
				<div class="signup-form"><!--sign up form-->
					<h2>Registrarse</h2>
					<form action="#">
						<input type="text" placeholder="Nombre" ng-model="user.name" />
						<input type="password" placeholder="Contraseña" ng-model="user.password" />
						<button type="submit" class="btn btn-default" ng-click="signup()">Registarse</button>
					</form>
				</div><!--/sign up form-->
			</div>
		</div>
	</div>
</section><!--/form-->